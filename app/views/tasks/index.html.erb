<div class="counter">
<div class="row">
<div class="col-xs-12 col-sm-6 col-sm-offset-3">
<h1>My tasks</h1>
<% @tasks.each do |task| %>

<ul>
  <li><%= task.name  %>  |  <%= task.status %> | <%= link_to "Update", edit_task_path(task) %> | <%= link_to "Delete", task_path(task), method: :delete %></li>
</ul>




<% end %>
<%= link_to "New task", new_task_path(@task) %>
</div>
</div>
</div>
